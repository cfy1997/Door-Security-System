<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucyzhao.dooraccesssecurity.InfoActivity"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:text="Last login time:"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@id/title"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/last_log_in_time" />

    <TextView
        android:text="Sleeping period: from"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@+id/last_log_in_time"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/sleep_start"
        />

    <TextView
        android:text="Working period: from"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@+id/sleep_end"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/work_start"
        />


    <TextView
        android:text="to"
        style="@style/SysInfoToTextViewStyle"
        android:layout_alignBottom="@id/work_start"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/work_start_text"
        android:id="@+id/work_end"
        />

    <TextView
        android:text="LED status:"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@+id/work_end"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/light_status"
        />

    <TextView
        android:text="System status:"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@+id/light_status"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/sys_status"
        />

    <TextView
        android:text="Number of house members:"
        style="@style/SysInfoTextViewStyle"
        android:layout_below="@+id/sys_status"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:id="@+id/num_users"
        />

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/last_log_in_time"
        android:layout_toEndOf="@+id/last_log_in_time"
        android:layout_marginStart="20dp"
        android:id="@+id/last_log_in_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/work_end"
        android:layout_toEndOf="@+id/work_end"
        android:layout_marginStart="10dp"
        android:id="@+id/work_end_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/work_start"
        android:layout_toEndOf="@+id/work_start"
        android:layout_marginStart="10dp"
        android:id="@+id/work_start_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/sleep_end"
        android:layout_toEndOf="@+id/sleep_end"
        android:layout_marginStart="10dp"
        android:id="@+id/sleep_end_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/sleep_start"
        android:layout_toEndOf="@+id/sleep_start"
        android:layout_marginStart="10dp"
        android:id="@+id/sleep_start_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/light_status"
        android:layout_toEndOf="@+id/light_status"
        android:layout_marginStart="20dp"
        android:id="@+id/light_status_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/sys_status"
        android:layout_toEndOf="@+id/sys_status"
        android:layout_marginStart="20dp"
        android:id="@+id/sys_status_text"
        android:text=""/>

    <TextView
        style="@style/NormalTextViewStyle"
        android:layout_alignBottom="@+id/num_users"
        android:layout_toEndOf="@+id/num_users"
        android:layout_marginStart="20dp"
        android:id="@+id/num_users_text"
        android:text=""/>

    <TextView
        android:text="to"
        style="@style/SysInfoToTextViewStyle"
        android:layout_alignBottom="@+id/sleep_start"
        android:id="@+id/sleep_end"
        android:layout_toEndOf="@+id/sleep_start_text" />



    <TextView
        android:text="Your Home Security System Info"
        android:textColor="@color/colorAccent"
        style="@style/NormalTextViewStyle"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:id="@+id/title"
        android:layout_below="@+id/info_toolbar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
