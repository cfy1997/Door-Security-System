<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gallery_invert"
        android:id="@+id/gallery"
        android:layout_alignBottom="@+id/save"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="delete picture"
        style="@style/TextButtonStyle"
        android:id="@+id/delete"
        android:layout_below="@+id/save"
        android:layout_alignStart="@+id/save" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eraser_invert"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignStart="@+id/gallery" />

    <Button
        android:text="save to gallery"
        style="@style/TextButtonStyle"
        android:id="@+id/save"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gallery"
        android:layout_marginStart="25dp" />
</RelativeLayout>